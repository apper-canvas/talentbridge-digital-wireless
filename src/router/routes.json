{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/jobs": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Jobs page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/job/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Job detail is public",
            "rule": "public"
          }
        ]
      }
    }
  },
